<?xml version="1.0"?>
<config>
    <modules>
        <BikeExchange_WS>
            <version>1.0.0</version>
        </BikeExchange_WS>
    </modules>

    <global>
        <models>
            <bikeexchange_ws>
                <class>BikeExchange_WS_Model</class>
                <resourceModel>bikeexchange_ws_resource</resourceModel>
            </bikeexchange_ws>
            <bikeexchange_ws_resource>
                <class>BikeExchange_WS_Model_Resource</class>
                <entities>
                    <taxons>
                        <table>bikeexchange_ws_taxons</table>
                    </taxons>
                </entities>
            </bikeexchange_ws_resource>
        </models>
        <resources>
            <bikeexchange_ws_setup>
                <setup>
                    <module>BikeExchange_WS</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bikeexchange_ws_setup>
            <bikeexchange_ws_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </bikeexchange_ws_read>
            <bikeexchange_ws_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </bikeexchange_ws_write>
        </resources>
        <helpers>
            <bikeexchange_ws>
                <class>Bikeexchange_WS_Helper</class>
            </bikeexchange_ws>
        </helpers>

        <blocks>
            <bikeexchange_ws>
                <class>BikeExchange_WS_Block</class>
            </bikeexchange_ws>
        </blocks>
        <events>
            <catalog_product_save_after>
                <observers>
                    <bikeexchange_ws>
                        <type>singleton</type>
                        <class>bikeexchange_ws/observer</class>
                        <method>catalog_product_save_after</method>
                    </bikeexchange_ws>
                </observers>
            </catalog_product_save_after>

            <catalog_product_load_after>
                <observers>
                    <bikeexchange_ws>
                        <type>singleton</type>
                        <class>bikeexchange_ws/observer</class>
                        <method>catalog_product_load_after</method>
                    </bikeexchange_ws>
                </observers>
            </catalog_product_load_after>
        </events>
    </global>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <BikeExchange_WS before="Mage_Adminhtml">BikeExchange_WS_Adminhtml</BikeExchange_WS>
                    </modules>
                </args>
            </adminhtml>
            <bikeexchange>
                <use>admin</use>
                <args>
                    <module>BikeExchange_WS</module>
                    <frontName>bikeexchange</frontName>
                </args>
            </bikeexchange>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <bikeexchange_ws>
                    <file>bikeexchange/ws.xml</file>
                </bikeexchange_ws>
            </updates>
        </layout>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <bikeexchange>
                                            <title>BikeExchange WS - All</title>
                                        </bikeexchange>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
<config>
    <modules>
        <Eadesigndev_Shipestimation>
            <version>1.0.3</version>
        </Eadesigndev_Shipestimation>
    </modules>
    <global>
        <helpers>
            <shipestimation>
                <class>Eadesigndev_Shipestimation_Helper</class>
            </shipestimation>
        </helpers>
        <blocks>
            <shipestimation>
                <class>Eadesigndev_Shipestimation_Block</class>
            </shipestimation>
        </blocks>
        <models>
            <shipestimation>
                <class>Eadesigndev_Shipestimation_Model</class>
            </shipestimation>
        </models>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <shipestimationopt>
                                            <title>EaDesign Shipestimation</title>
                                        </shipestimationopt>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <events>
            <controller_action_predispatch>
                <observers>
                    <eadesigndev_shipestimation>
                        <class>shipestimation/eacore_observer</class>
                        <method>preDispatch</method>
                    </eadesigndev_shipestimation>
                </observers>
            </controller_action_predispatch>
        </events>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <affiliate module="Eadesigndev_Shipestimation">
                    <file>eadesigndev/shipestimation.xml</file>
                </affiliate>
            </updates>
        </layout>
        <routers>
            <shipestimation>
                <use>standard</use>
                <args>
                    <module>Eadesigndev_Shipestimation</module>
                    <frontName>shipestimation</frontName>
                </args>
            </shipestimation>
        </routers>
    </frontend>
</config>
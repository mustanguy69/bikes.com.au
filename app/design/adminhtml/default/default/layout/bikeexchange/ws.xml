<?xml version="1.0"?>
<layout>
    <bikeexchange_adminhtml_index_index>
        <reference name="content">
            <block type="core/template" name="bikeexchange.ws" template="bikeexchange/ws.phtml" before="-" />
        </reference>

        <reference name="head">
            <action method="addItem">
                <type>js_css</type>
                <name>prototype/windows/themes/default.css</name>
            </action>
            <action method="addCss">
                <name>lib/prototype/windows/themes/magento.css</name>
            </action>
        </reference>
    </bikeexchange_adminhtml_index_index>

    <bikeexchange_adminhtml_index_popup>
        <reference name="content">
            <block type="core/template" name="bikeexchange.popup" template="bikeexchange/popup.phtml" before="-" />
        </reference>

        <reference name="head">
            <action method="addItem">
                <type>js_css</type>
                <name>prototype/windows/themes/default.css</name>
            </action>
            <action method="addCss">
                <name>lib/prototype/windows/themes/magento.css</name>
            </action>
        </reference>
    </bikeexchange_adminhtml_index_popup>

    <bikeexchange_adminhtml_taxons_index>
        <reference name="content">
            <block type="bikeexchange_ws/adminhtml_taxons" name="taxons" template="bikeexchange/taxons.phtml" />
        </reference>
    </bikeexchange_adminhtml_taxons_index>

    <bikeexchange_adminhtml_taxons_edit>
        <reference name="content">
            <block type="bikeexchange_ws/adminhtml_taxons_edit" name="taxons.edit" />
        </reference>
    </bikeexchange_adminhtml_taxons_edit>

    <bikeexchange_adminhtml_index_variants>
        <reference name="content">
            <block type="core/template" name="bikeexchange.variants" template="bikeexchange/variants.phtml" />
        </reference>
    </bikeexchange_adminhtml_index_variants>
</layout>